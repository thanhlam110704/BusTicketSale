@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var httpContext = HttpContextAccessor.HttpContext;
    var Email = httpContext.Session.GetString("UserSession");
    var ID = httpContext.Session.GetInt32("UserID");
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-utilities.rtl.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-utilities.css" />
    <link rel="stylesheet" href="~/css/access.css" />
    <style>
        .navbar-custom {
            background-color: #343a40;
        }

        .navbar-brand img {
            margin-left: 40px;
            height: 40px;
        }

        .navbar-nav .nav-link {
            color: #fff;
            margin-right: 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #adb5bd;
            }

        .navbar-text {
            color: #fff;
        }

        .nav-group {
            margin-right: 40px
        }

        .nav-items {
            margin-right: 10px;
        }

        .nav-link {
            white-space: nowrap; /* Đảm bảo nội dung không bị xuống dòng */
        }

        .footer-heading {
            color: #ffc107;
        }

        .footer-item {
            color: #adb5bd;
            text-decoration: none;
        }

            .footer-item:hover {
                color: #ffc107;
            }

        .footer-item-social {
            color: #fff;
            text-decoration: none;
            margin-right: 15px;
        }

            .footer-item-social:hover {
                color: #ffc107;
            }

    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="TrangChu" asp-controller="Home">
                <img src="~/public/icon-vxr-full-2-1@2x.png" alt="Logo">
            </a>
            <div class="collapse navbar-collapse justify-content-end nav-group" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="TrangChu" asp-controller="Home">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="ManagerTicket" asp-controller="Tickets">Đơn hàng của tôi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Liên hệ</a>
                    </li>
                    @if (!string.IsNullOrEmpty(Email))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CustomerAccount" asp-action="ManagerAccountCustomer" asp-route-id="@ID">
                                <span style="font-weight:300;color:#ffc107;text-decoration:none;text-align:center;">
                                    <strong style="font-weight:100;font-size:14px;color:#ffc107;text-decoration:none;text-align:center;">Hi,</strong> @Email
                                </span>
                            </a>

                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Access/Login">Đăng nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer class="bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="footer-heading">Limosine VIP các tỉnh</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a href="mailto:quangcongvan2004@gmail.com" class="footer-item">Email: quangcongvan2004@gmail.com</a>
                        </li>
                        <li>
                            <a href="tel:+84767050128" class="footer-item">Số điện thoại: 0767050128</a>
                        </li>
                        <li>
                            <h6><br>Hãy liên hệ cho chúng tôi để được hỗ trợ</h6>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="footer-heading">Về chúng tôi</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-item">Phần mềm đại lý</a></li>
                        <li><a href="#" class="footer-item">Giới thiệu vexere.com</a></li>
                        <li><a href="#" class="footer-item">Tuyển dụng</a></li>
                        <li><a href="#" class="footer-item">Tin tức</a></li>
                        <li><a href="#" class="footer-item">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="footer-heading">Hỗ trợ</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-item">Hướng dẫn thanh toán</a></li>
                        <li><a href="#" class="footer-item">Quy chế vé xe</a></li>
                        <li><a href="#" class="footer-item">Chính sách bảo mật thông tin</a></li>
                        <li><a href="#" class="footer-item">Chính sách bảo mật thanh toán</a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col text-center">
                    <ul class="list-unstyled d-inline-block">
                        <li class="d-inline">
                            <a href="#" class="footer-item-social">Hướng dẫn thanh toán</a>
                        </li>
                        <li class="d-inline">
                            <a href="#" class="footer-item-social">Quy chế vé xe</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        function menuToggle() {
            const toggleMenu = document.querySelector(".menu");
            toggleMenu.classList.toggle("active");
        }
    </script>
</body>
</html>

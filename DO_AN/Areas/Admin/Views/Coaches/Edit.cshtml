@model DO_AN.Models.Coach

@{
    ViewData["Title"] = "Edit Coach";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4">CHỈNH SỬA XE</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="IdCoach" />

            <div class="mb-3">
                <label asp-for="NameCoach" class="form-label">Tên Xe</label>
                <input asp-for="NameCoach" class="form-control" />
                <span asp-validation-for="NameCoach" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label">Loại</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SeatsQuantity" class="form-label>Số Lượng Ghế</label>
                <input asp-for="SeatsQuantity" class="form-control" />
                <span asp-validation-for="SeatsQuantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BasicPrice" class="form-label">Giá Cơ Bản</label>
                <input asp-for="BasicPrice" class="form-control" />
                <span asp-validation-for="BasicPrice" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdTrain" class="form-label">Chuyến Xe</label>
                <select asp-for="IdTrain" class="form-control" asp-items="ViewBag.IdTrain"></select>
                <span asp-validation-for="IdTrain" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
            </div>
        </form>
    </div>
</div>



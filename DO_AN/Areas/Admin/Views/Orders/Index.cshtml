@model IEnumerable<DO_AN.Models.Order>

@{
    ViewData["Title"] = "Quản lý hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int i = 0; // Initialize the counter for numbering rows
}

<h1>QUẢN LÝ HÓA ĐƠN</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Đơn Giá</th>
                <th scope="col">Ngày Đặt hàng</th>
                <th scope="col">Mã Vé</th>
                <th scope="col">Tên Khách Hàng</th>
                <th scope="col">Điện Thoại</th>
                <th scope="col">Mã Khách Hàng</th>
                <th scope="col">Thanh Toán</th>
                <th scope="col">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @{
                            i = i + 1;
                        } @i
                    </th>
                    <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateOrder)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdTicket)</td>
                    <td>@Html.DisplayFor(modelItem => item.NameCus)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdCusNavigation.IdCus)</td>
                    <td>Đã thanh toán</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@item.IdOrder">Chi tiết</a>
                        <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Orders" asp-action="Delete" asp-route-id="@item.IdOrder">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

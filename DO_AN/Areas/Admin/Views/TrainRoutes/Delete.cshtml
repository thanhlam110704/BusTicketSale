@model DO_AN.Models.TrainRoute

@{
    ViewData["Title"] = "Delete Train Route";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4">XÓA THÔNG TIN TUYẾN ĐƯỜNG</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h3 class="card-title">Bạn có muốn xóa tuyến đường này?</h3>
        <div class="mb-3">
            <h4>Thông Tin Tuyến Đường</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Điểm Đi:</dt>
                <dd class="col-sm-9">@Model.PointStart</dd>
                <dt class="col-sm-3">Điểm Đến:</dt>
                <dd class="col-sm-9">@Model.PointEnd</dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdTrainRoute" />
            <div class="d-grid gap-2">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="ListTrainRoutes" class="btn btn-secondary">Quay Lại</a>
            </div>
        </form>
    </div>
</div>

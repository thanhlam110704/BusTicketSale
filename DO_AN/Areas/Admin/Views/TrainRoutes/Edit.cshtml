@model DO_AN.Models.TrainRoute

@{
    ViewData["Title"] = "Edit Train Route";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center my-4">SỬA THÔNG TIN TUYẾN ĐƯỜNG</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="IdTrainRoute" />

            <div class="mb-3">
                <label asp-for="PointStart" class="form-label">Điểm Đi</label>
                <input asp-for="PointStart" class="form-control" />
                <span asp-validation-for="PointStart" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PointEnd" class="form-label">Điểm Đến</label>
                <input asp-for="PointEnd" class="form-control" />
                <span asp-validation-for="PointEnd" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="ListTrainRoutes" class="btn btn-secondary">Quay Lại</a>
            </div>
        </form>
    </div>
</div>

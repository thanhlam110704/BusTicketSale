@model DO_AN.Models.TrainRoute

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Tạo tuyến đường</h1>

<div class="card mx-auto" style="width:500px">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="PointStart" class="form-label">Điểm Đi</label>
                <input asp-for="PointStart" class="form-control" />
                <span asp-validation-for="PointStart" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PointEnd" class="form-label">Điểm Đến</label>
                <input asp-for="PointEnd" class="form-control" />
                <span asp-validation-for="PointEnd" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Tạo Mới</button>
                <a class="btn btn-secondary" href="@Url.Action("ListTrainRoutes", "TrainRoutes", new { area = "Admin" })">Quay Lại</a>
            </div>
        </form>
    </div>
</div>


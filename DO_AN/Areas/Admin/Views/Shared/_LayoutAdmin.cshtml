@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/LayoutAdmin/assets/css/style.css">
    <style>
        .nav-item a.nav-link.active {
            background-color: #f0f0f0; /* Màu nền nổi bật */
            color: #333; /* Màu chữ nổi bật */
        }

    

        .bx {
            color: #333;
            font-size: 1.125rem;
            line-height: 1;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="#">Sales Ticket</a>
                <a class="navbar-brand brand-logo-mini" href="#"></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0" placeholder="Search projects">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img" style="display: flex; justify-content: center;align-items: center;width: 100%;height: 100%;">
                                <i class='bx bxs-user' style="font-size: 32px"></i>
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">Administrator</p>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item d-none d-lg-block full-screen-link">
                        <a class="nav-link">
                            <i class="mdi mdi-fullscreen"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-email-outline"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
                            <i class="mdi mdi-bell-outline"></i>
                        </a>
                    </li>
                    <!--    logout      -->
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-power"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image" style=" display: flex;justify-content: center;align-items: center;width: 100%;height: 100%;">
                                <i class='bx bxs-user' style="font-size: 44px;"></i>
                                <span class="login-status online"></span>
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">Administrator</span>
                                <span class="text-secondary text-small">Project Manager</span>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item @(currentAction == "Sales" && currentController == "Sales" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Sales", "Sales", new { area = "Admin" })">
                            <i class='bx bxs-dashboard'></i>
                            <span class="menu-title">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item @(currentAction == "Index" && currentController == "Orders" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Orders", new { area = "Admin" })">
                            <i class='bx bxs-notepad'></i>
                            <span class="menu-title">Quản lý hóa đơn</span>
                        </a>
                    </li>
                    <li class="nav-item @(currentAction == "Index" && currentController == "Trains" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Trains", new { area = "Admin" })">
                            <i class='bx bxs-map-alt'></i>   <span class="menu-title">Quản lý chuyến xe</span>

                        </a>
                    </li>
                    <li class="nav-item @(currentAction == "Index" && currentController == "TrainRoutes" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "TrainRoutes", new { area = "Admin" })">
                            <i class='bx bxs-map'></i>   <span class="menu-title">Quản lý tuyến đường</span>

                        </a>
                    </li>
                    <li class="nav-item @(currentAction == "Index" && currentController == "Coaches" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Coaches", new { area = "Admin" })">
                            <i class='bx bxs-bus'></i>    <span class="menu-title">Quản lý xe</span>

                        </a>
                    </li>
                    <li class="nav-item @(currentAction == "Index" && currentController == "Accounts" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "Accounts", new { area = "Admin" })">
                            <i class='bx bxs-user-circle'></i>   <span class="menu-title">Quản lý tài khoản</span>

                        </a>
                    </li>
                   
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- partial:../../partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid d-flex justify-content-between">
                        <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
                        <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin templates</a> from Bootstrapdash.com</span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/LayoutAdmin/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/LayoutAdmin/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="~/LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="~/LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/LayoutAdmin/assets/js/dashboard.js"></script>
    <script src="~/LayoutAdmin/assets/js/todolist.js"></script>
    <!-- End custom js for this page -->
</body>
</html>
